<h2>
  Users
  <button id="add-user" {{action 'createUser'}} class="btn btn-sm btn-primary">Create User</button>
  <button id="add-user" {{action 'updateFirst'}} class="btn btn-sm btn-danger">Update First User</button>
</h2>
<h4>Is sync loaded: {{isUserSyncLoad}}</h4>
<ul class="list-group col-md-5">
  {{#each model as |user|}}
    <li class="list-group-item">
      <span class="badge delete-user" {{action 'deleteUser' user}}>X</span>
      {{#link-to 'users.user' user.id}}
        {{user.firstName}} {{user.lastName}} - {{user.gender}}
      {{/link-to}}
    </li>
  {{/each}}
</ul>
